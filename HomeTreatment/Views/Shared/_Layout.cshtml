<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- static middleware otgovarq za css-->

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <img id="logoImg" style="cursor:pointer" src="~/images/logo.png" />
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @if (User.Identity.Name != null && ViewData["Title"].ToString() == "Home Page")
                {
                    @if (User.Identity.Name == "administrator@gmail.com")
                    {
                        <ul class="navbar-nav ms-auto float-left">
                            <li class="nav-item" id="dashboard">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="AllUsers" style="cursor:pointer">| Admin</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto float-left">
                            <li class="nav-item" id="dashboard">
                                <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index" style="cursor:pointer">| Dashboard</a>
                            </li>
                        </ul>
                    }
                }

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ms-auto ">

                        @if (User.Identity.Name != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark"> @User.Identity.Name</span>
                            </li>

                            <li class="nav-item" id="services">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Logout">Logout</a>
                            </li>

                        }
                        else
                        {
                            if (ViewData["Title"].ToString() == "Home Page")
                            {
                                <li class="nav-item" id="services">
                                    <span class="nav-link text-dark" style="cursor:pointer">Services</span>
                                </li>

                            }

                            if (ViewData["Title"].ToString() != "Login" && ViewData["Title"].ToString() != "Register")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div style="padding-bottom:50px"></div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Home Treatment
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- буутстрапа зависи от джейкуерито-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
